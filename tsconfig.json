{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "trailing-comma": [false, {
    "singleline": "never",
    "multiline": {
      "objects": "ignore",
      "arrays": "always",
      "functions": "never",
      "typeLiterals": "ignore"
    }
  }],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.ts",
     "**/*.tsx"
, "src/store/actions.ss", "src/store/state.ts"  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "./tsconfig.extends.json"
}
